global
    log         127.0.0.1 local2
    chroot	/var/lib/haproxy
    pidfile     /var/run/haproxy.pid
    maxconn     4000
    user        haproxy
    group	haproxy
    daemon
    stats socket /var/lib/haproxy/stats

defaults
    mode                    http
    log                     global
    option                  httplog
    option                  dontlognull
    option http-server-close
    option forwardfor       except 127.0.0.0/8
    option                  redispatch
    retries                 3
    timeout http-request    10s
    timeout queue           1m
    timeout connect         10s
    timeout client          1m
    timeout server          1m
    timeout http-keep-alive 10s
    timeout check           10s
    maxconn                 3000    stats auth cda:cda


frontend frontend_https
    mode http
    bind :80
    bind *:443 ssl crt  /etc/haproxy/certs/app1.dsbm.software.pem
    bind *:5443 ssl crt /etc/haproxy/certs/app1.dsbm.software.pem
    reqadd X-Forwarded-Proto:\ https
    http-request redirect scheme https unless { ssl_fc }
    default_backend backend_http

backend backend_http
    balance roundrobin
    stats enable
    stats uri /stats
    stats realm HAProxy\ Statistics
    stats auth cda:cda
    cookie JSESSIONID prefix nocache
    server  app1 127.0.0.1:7000 check
    server  app2 127.0.0.1:7001 check
    server  app3 127.0.0.1:7002 check